@model FormModel

<div class="card-body">
	@if (Model.Id > 0)
	{
		<div class="form-group row">
			<div class="col-md-3">
				<nop-label asp-for="SeName" />
			</div>
			<div class="col-md-9 align-content-center">
				<a href="@Model.SeName" target="_blank">@Model.SeName</a>
				<i class="fas fa-solid fa-link" onclick="CopyText('@Model.SeName')" style="cursor: pointer;"></i>
			</div>
		</div>
	}

	<div class="form-group row">
		<div class="col-md-3">
			<nop-label asp-for="Name" />
		</div>
		<div class="col-md-9">
			<nop-editor asp-for="Name" asp-required="true" />
			<span asp-validation-for="Name"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-md-3">
			<nop-label asp-for="Active" />
		</div>
		<div class="col-md-9">
			<nop-editor asp-for="Active" />
			<span asp-validation-for="Active"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-md-3">
			<nop-label asp-for="DepartmentId" />
		</div>
		<div class="col-md-9">
			<nop-select asp-for="DepartmentId" asp-items="Model.AvailableDesignations" />
			<span asp-validation-for="DepartmentId"></span>
		</div>
	</div>
</div>