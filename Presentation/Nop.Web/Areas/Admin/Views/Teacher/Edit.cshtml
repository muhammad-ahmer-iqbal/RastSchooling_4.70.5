@model TeacherModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Teachers.Edit").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Teachers");
}

@if (ViewBag.ViewMode)
{
    <style>
        .main-sidebar,
        .main-header,
        .main-footer,
        .hide-on-viewmode {
            display: none !important;
        }

        .content-wrapper {
            margin: 0px !important;
        }

        #teacher-form .content-header{
            display: none !important;
        }
        
        #teacher-form section.content{
            padding:10px !important;
        }
    </style>

    <script>
        $(document).ready(function(){
            $('input, textarea, select, button').prop('disabled', true);
        })
    </script>
}

<form method="post" id="teacher-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Teachers.Edit")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Common.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="Teacher-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="teacher-delete" />
